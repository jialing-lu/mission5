@{ 
    ViewData["Title"] = "Movie Form";
}

@model DateMe.Models.ApplicationResponse

<h1> This is where you fill out the Movie Information Form.  </h1>
<br />
<p>
    The “Edited”, “Lent To”, and “Notes” fields are optional. All other fields must be entered
    <br />
    Notes should be limited to 25 characters.
</p>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId"> Category </label>
        <select asp-for="CategoryId">
            <option value="">Select a Category:</option>
            @foreach (category c in ViewBag.categories)
            {
                <option value="@c.CategoryId">@c.Category</option>
            }
        </select>


        <br />
        <label asp-for="Title"> Title </label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year"> Year </label>
        <input asp-for="Year" />
        <br />
        <label asp-for="DirectorFirstName"> Director First Name </label>
        <input asp-for="DirectorFirstName" />
        <br />
        <label asp-for="DirectorLastName"> Director Last Name </label>
        <input asp-for="DirectorLastName" />
        <br />

        <label asp-for="Rating"> Rating </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />

        <label asp-for="Edited"> Edited? </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="LentTo"> Lent To... </label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes"> Notes </label>
        <input asp-for="Notes" />
        <br />

        <button type="submit"> Submit the Movie Application </button>
        <div asp-validation-summary="All"></div>

    </form>
</div>